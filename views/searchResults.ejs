<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>search result</title>
</head>
<body>
    <div>
    <%if (recipes.length === 0) { %>
        <h2>No results found for "<%= query %>"</h2>
    <% } else { %>
        <h2>Search Results for "<%= query %>":</h2>
        <ul>
            <% recipes.forEach(function(recipe) { %>
                <li>
                    <img src="/images/uploads/<%=recipe.image%>" alt="image">
                    <h3><%= recipe.name %></h3>
                    <a href="/recipes/<%=recipe.name%>">checkout</a>
                </li>
            <% })}; %>
        </ul>
        </div>
</body>
</html>